---
import Header from "../components/Header.astro";
import Form from "../components/Form.astro";
import Social from "../components/Social.astro";
import SpanishLayout from "../layouts/SpanishLayout.astro";
---

<SpanishLayout title="portafolio">
	<Header />
	<Form 
	title="¡Comencemos!"
	text="Estoy aquí para ayudarte. Si tienes alguna pregunta, inquietud o proyecto en mente, no dudes en ponerte en contacto. ¡Estoy listo para trabajar juntos!"
	name="Tu Nombre"
	email="Tu Correo"
	textarea="Escribe un Mensaje"
	button="ENVIAR"/>
	<Social/>
</SpanishLayout>
<script>
	import "../scripts/mainMenu";
	import "../scripts/ValidationForm"
</script>
<style lang="scss">

	h2 {
		margin-top: 70px;
	}
	button img {
		margin: 20px;
	}

	@media only screen and (min-width: 1024px) {

		.container {
			display: flex;
			flex-direction: column;
			justify-content: center;
			align-items: center;
			text-align: center;
			height: 100%;
		}
	}
</style>